doctype html
html(ng-app='catApp')
    head
        script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular.min.js')
        script(src='cat-find.js')
    body
        h1 Find-a-Cat
        div(ng-controller="findController")
            label Find a cat by Name: &nbsp
            input(type='text', ng-model='catName', placeholder='Enter a name here')
            br
            br
            input(type='submit' value='find' ng-click='findCat(catName)')

